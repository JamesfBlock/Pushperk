<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Campaign</th>
      <th>Order date</th>
      <th>Status</th>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>

      <th>Handling</th>
      <th>Gross</th>
      <th>Taxes</th>
      <th>Net</th>



      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.campaign_id %></td>
        <td><%= order.order_date %></td>
        <td><%= order.status %></td>
        <td><%= order.title %></td>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>

        <td><%= order.handling_and_shipping %></td>
        <td><%= order.subtotal %></td>
        <td><%= order.taxes %></td>
        <td><%= order.total %></td>

        <td><%= link_to 'View', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

